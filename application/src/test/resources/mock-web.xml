<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" version="3.0"
         xmlns="http://java.sun.com/xml/ns/javaee">

    <context-param>
        <param-name>javamelody.datasources</param-name>
        <param-value>java:/jdbc/uvms_incident</param-value>
    </context-param>
	<listener>
		<listener-class>net.bull.javamelody.SessionListener</listener-class>
	</listener>
    <filter>
		<filter-name>javamelody</filter-name>
		<filter-class>net.bull.javamelody.MonitoringFilter</filter-class>
		<async-supported>true</async-supported>
		<init-param>
			<param-name>displayed-counters</param-name>
			<param-value>http,sql,ejb,error,log</param-value>
		</init-param>
		<init-param>
			<param-name>system-actions-enabled</param-name>
			<param-value>true</param-value>
		</init-param>
		<init-param>
			<param-name>storage-directory</param-name>
			<param-value>javamelody-incident</param-value>
		</init-param>
		<init-param>
			<param-name>datasources</param-name>
			<param-value>java:/jdbc/uvms_incident</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>javamelody</filter-name>
		<url-pattern>/*</url-pattern>
		<dispatcher>REQUEST</dispatcher>
		<dispatcher>ASYNC</dispatcher>
	</filter-mapping>

	<filter>
		<filter-name>RequestFilter</filter-name>
		<filter-class>eu.europa.ec.fisheries.uvms.incident.rest.filters.RequestFilter</filter-class>
		<async-supported>true</async-supported>
	</filter>

	<filter-mapping>
		<filter-name>RequestFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	
    <filter>
        <filter-name>AuthenticationFilter</filter-name>
        <filter-class>eu.europa.ec.fisheries.uvms.rest.security.AuthenticationFilter</filter-class>
		<async-supported>true</async-supported>
    </filter>

	<filter-mapping>
		<filter-name>AuthenticationFilter</filter-name>
		<url-pattern>/rest/incident/*</url-pattern>
	</filter-mapping>
	
	<filter>
	     <filter-name>MDCFilter</filter-name>
	     <filter-class>eu.europa.ec.fisheries.uvms.commons.rest.filter.MDCFilter</filter-class>
		 <async-supported>true</async-supported>
	</filter>
	
	<filter-mapping>
		<filter-name>MDCFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
</web-app>


